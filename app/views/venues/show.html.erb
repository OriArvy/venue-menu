<div class="container">
  <div class="row">
   <img class="col-lg-12 pt-4" src=<%= @venue.photo %> alt=''>
  </div>
  <div class="row">
  </div>
  <div class="row">
    <div class="col-lg-6 ">
      <p class="text-center"></p>
    </div>
  </div>


  <div class="card text-center" >
    <div class="card-body text-centr">
      <h1 class="card-title"><%= @venue.name %></h1>
      <p class="card-text"><%= @venue.description %></p>
      <div class="row">
        <h3 class="text-center">Price from: £<%= @venue.price %></h3>
      </div>
      <div class="row">
        <h3 class="text-center">Rating: <% if @venue.rating.nil? == true %> No ratings yet
          <% else %>
            <% if @venue.rating.between?(4.8, 5) %>
            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>

            <% elsif @venue.rating.between?(4.5, 4.799)  %>
            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half"></i>

            <% elsif @venue.rating.between?(4, 4.5) %>
            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>

            <% elsif @venue.rating.between?(3.5, 3.99) %>
            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half"></i>

            <% elsif @venue.rating.between?(3, 3.5) %>
            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>

            <% elsif @venue.rating.between?(2.5, 2.99) %>
            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half"></i>

            <% elsif @venue.rating.between?(2, 2.5) %>
            <i class="fas fa-star"></i><i class="fas fa-star"></i>

            <% elsif @venue.rating.between?(1.5, 1.99) %>
            <i class="fas fa-star"></i><i class="fas fa-star-half"></i>

            <% elsif @venue.rating.between?(1, 1.5)  %>
            <i class="fas fa-star"></i>
            <% end  %>
            (<%= @venue.rating %>)
          <% end %>
        </h3>
      </div>

<!-- These need to be user_signed_in ?-->
<div class="booking-form" >
  <div class="form-inputs">
<%= simple_form_for [@venue, @booking] do |f| %>
  <%= f.input :check_in %>
  <%= f.input :check_out %>
  <%= f.submit %>
<% end %>

</div>


    <%= f.input :email, required: false, autofocus: true, placeholder: "bob@gmail.com" %>
    <%= f.input :password, required: false, placeholder: "••••••" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>






      <%= link_to "Book now",new_venue_booking_path(@venue), class: "btn btn-primary" %>
      <% if current_user == @venue.user %>
        <%= link_to "Edit Venue",edit_venue_path(@venue), class: "btn btn-warning" %>
      <% end %>

    </div>
  </div>
</div>

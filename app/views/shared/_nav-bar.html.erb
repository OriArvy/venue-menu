<% if params[:action] == 'home' %>

<% else %>

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

    <%= link_to root_path, class: 'navbar-brand' do %>
    <div id="logo-text" >VenueMenu</div>
    <% end %>

      <li class="text-truncate w-100 mr-3 ml-2">
          <%= form_tag venues_path, :class => "position-form" , method: :get do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Explore"
            %>
            <%= submit_tag "Search", class: "btn btn-outline-light ml-2" %>
          <% end %>
      </li>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
           <%  if user_signed_in? %>
           <%= link_to "Add Venue",new_venue_path, class: "nav-link", id: "nav-link-white"  %>
           <% end %>
        </li>
        <li class="nav-item active">
           <%  if user_signed_in? %>
           <%= link_to "My Profile",profile_path, class: "nav-link", id: "nav-link-white"  %>
           <% end %>
        </li>
        <li class="nav-item">
          <% if user_signed_in? == false %>
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link", id: "nav-link-white" %>
          <% end %>
        </li>
        <li class="nav-item">
          <%  if user_signed_in? %>
            <%= link_to "Sign out",destroy_user_session_path, method: :delete, class: "nav-link", id: "nav-link-white" %>
          <%  else %>
            <%= link_to "Sign in",new_user_session_path, class: "nav-link", id: "nav-link-white"  %>
          <%  end %>
        </li>
      </ul>
    </div>
  </div>

<% end %>
